{
    "name": "@physiotherapy/database",
    "version": "1.0.0",
    "description": "Database schemas, migrations, and utilities",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc && cp -r src/schema dist/",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "migrate": "node dist/migrate.js",
        "migrate:create": "node dist/migrate-create.js",
        "seed": "node dist/seed.js",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@physiotherapy/shared": "*",
        "pg": "^8.11.3",
        "redis": "^4.6.10",
        "drizzle-orm": "^0.29.0",
        "postgres": "^3.4.3",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "typescript": "^5.3.0",
        "@types/node": "^20.10.0",
        "@types/pg": "^8.10.9"
    }
}
